{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "typeRoots": ["./node_modules/@types", "./src/types"], // 优先识别src/types下的类型
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "test/**/*"]
}
